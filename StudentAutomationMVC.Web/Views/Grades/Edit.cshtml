@model StudentAutomationMVC.Web.Models.Grades.GradeUpsertDto
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Not Düzenle";
    var students = ViewBag.Students as List<SelectListItem> ?? new();
    var courses = ViewBag.Courses as List<SelectListItem> ?? new();
}

<h3>Not Düzenle</h3>
@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @* Edit(int id, GradeUpsertDto model) -> id route paramıyla gelecek, form post'u aynı endpoint'e gider *@

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Öğrenci</label>
                    <select asp-for="StudentId" class="form-select" asp-items="students"></select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ders</label>
                    <select asp-for="CourseId" class="form-select" asp-items="courses"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Tür</label>
                    <select asp-for="Type" class="form-select">
                        @foreach (var t in Enum.GetValues(typeof(StudentAutomationMVC.Web.Models.Grades.GradeType)))
                        {
                            <option value="@t" selected="@(Model.Type.Equals(t))">@t</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Not (0-100)</label>
                    <input asp-for="Value" type="number" step="0.01" min="0" max="100" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Dönem</label>
                    <input asp-for="Term" class="form-control" />
                    <span asp-validation-for="Term" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
            </div>
        </form>
    </div>
</div>
