@model StudentAutomationMVC.Web.Models.Students.StudentCreateDto
@{
    ViewData["Title"] = "Yeni Öğrenci";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Eğer UI'da kullanıcıyı seçtirecekseniz burayı dropdown'a bağlayın -->
            <div class="mb-3">
                <label class="form-label">UserId</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Öğrenci No</label>
                <input asp-for="StudentNumber" class="form-control" />
                <span asp-validation-for="StudentNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Bölüm</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Doğum Tarihi</label>
                <input asp-for="BirthDate" class="form-control" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Status" />
                <label class="form-check-label" asp-for="Status">Aktif</label>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
