@model StudentAutomationMVC.Web.Models.Feedbacks.StudentFeedbackCreateDto
@{
    ViewData["Title"] = "Geri Bildirim Ekle";
    var courseId = (int?)ViewBag.CourseId ?? Model.CourseId;
    var studentId = (int?)ViewBag.StudentId ?? Model.StudentId;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="m-0">Yeni Geri Bildirim</h3>
    <a asp-action="Index" asp-route-courseId="@courseId" asp-route-studentId="@studentId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>

@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <input type="hidden" name="courseId" value="@courseId" />
            <input type="hidden" name="studentId" value="@studentId" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Kurs Id</label>
                    <input asp-for="CourseId" class="form-control" />
                    <span class="text-danger" asp-validation-for="CourseId"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Öğrenci Id</label>
                    <input asp-for="StudentId" class="form-control" />
                    <span class="text-danger" asp-validation-for="StudentId"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Yorum</label>
                    <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                    <span class="text-danger" asp-validation-for="Comment"></span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-check-lg"></i> Kaydet
                </button>
                <a asp-action="Index" asp-route-courseId="@courseId" asp-route-studentId="@studentId" class="btn btn-outline-secondary">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
