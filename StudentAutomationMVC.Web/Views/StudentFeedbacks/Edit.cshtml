@model StudentAutomationMVC.Web.Models.Feedbacks.StudentFeedbackUpdateDto
@{
    ViewData["Title"] = "Geri Bildirim Düzenle";
    var meta = (StudentAutomationMVC.Web.Models.Feedbacks.StudentFeedbackListDto)ViewBag.Meta!;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="m-0">Geri Bildirim Düzenle</h3>
    <a asp-action="Index" asp-route-courseId="@meta?.CourseId" asp-route-studentId="@meta?.StudentId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>

@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3"><strong>Id:</strong> @meta?.Id</div>
            <div class="col-md-3"><strong>Kurs:</strong> @meta?.CourseId</div>
            <div class="col-md-3"><strong>Öğrenci:</strong> @meta?.StudentId</div>
            <div class="col-md-3"><strong>Öğretmen:</strong> @meta?.TeacherFullName</div>
            <div class="col-md-3"><strong>Oluşturma:</strong> @meta?.CreatedAt.ToLocalTime().ToString("g")</div>
            <div class="col-md-3"><strong>Güncelleme:</strong> @(meta?.UpdatedAt?.ToLocalTime().ToString("g") ?? "-")</div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />

            <div class="mb-3">
                <label class="form-label">Yorum</label>
                <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                <span class="text-danger" asp-validation-for="Comment"></span>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-check-lg"></i> Kaydet
                </button>
                <a asp-action="Index" asp-route-courseId="@meta?.CourseId" asp-route-studentId="@meta?.StudentId" class="btn btn-outline-secondary">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
