@model StudentAutomationMVC.Web.Models.Feedbacks.StudentFeedbackListDto
@{
    ViewData["Title"] = "Geri Bildirim Detayı";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="m-0">Detay</h3>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" asp-route-studentId="@Model.StudentId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>

@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Kurs</dt>
            <dd class="col-sm-9">@Model.CourseId</dd>

            <dt class="col-sm-3">Öğrenci</dt>
            <dd class="col-sm-9">@Model.StudentId</dd>

            <dt class="col-sm-3">Öğretmen</dt>
            <dd class="col-sm-9">@Model.TeacherFullName</dd>

            <dt class="col-sm-3">Yorum</dt>
            <dd class="col-sm-9">@Model.Comment</dd>

            <dt class="col-sm-3">Oluşturma</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("f")</dd>

            <dt class="col-sm-3">Güncelleme</dt>
            <dd class="col-sm-9">@(Model.UpdatedAt?.ToLocalTime().ToString("f") ?? "-")</dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Düzenle
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash"></i> Sil
            </a>
        </div>
    </div>
</div>
