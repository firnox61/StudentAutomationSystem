@model List<StudentAutomationMVC.Web.Models.Courses.CourseListDto>
@{
    ViewData["Title"] = "Kurslar";
    bool? onlyActive = ViewBag.OnlyActive as bool?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Kurslar</h3>
    <div>
        <a class="btn btn-primary" asp-action="Create">Yeni Kurs</a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="input-group" style="max-width:380px">
        <div class="input-group-text">
            <input class="form-check-input mt-0" type="checkbox" name="onlyActive" value="true" @(onlyActive == true ? "checked" : "") />
        </div>
        <input type="text" class="form-control" value="Sadece aktif" readonly />
        <button class="btn btn-outline-secondary" type="submit">Filtrele</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Temizle</a>
    </div>
</form>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}
@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Kod</th>
            <th>Ad</th>
            <th>Öğretmen</th>
            <th>Öğrenci</th>
            <th>Aktif</th>
            <th style="width:190px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Code</td>
                <td>@c.Name</td>
                <td>@(string.IsNullOrWhiteSpace(c.TeacherFullName) ? "-" : c.TeacherFullName)</td>
                <td>@c.EnrollmentCount</td>
                <td>
                    @if (c.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@c.Id">Detay</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Düzenle</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
