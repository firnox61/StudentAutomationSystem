@model StudentAutomationMVC.Web.Models.Courses.CourseDetailDto
@{
    ViewData["Title"] = "Kurs Detayı";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Kurs Detayı</h3>
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">Listeye Dön</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
    </div>
</div>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}
@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            <dt class="col-sm-3">Kod</dt>
            <dd class="col-sm-9">@Model.Code</dd>
            <dt class="col-sm-3">Ad</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Öğretmen</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.TeacherFullName) ? Model.TeacherFullName : "-")</dd>
            <dt class="col-sm-3">Öğrenci Sayısı</dt>
            <dd class="col-sm-9">@Model.EnrollmentCount</dd>
            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Aktif</span>
                }
                else
                {
                    <span class="badge bg-secondary">Pasif</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2 mb-3">
    <form asp-action="SetActive" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="courseId" value="@Model.Id" />
        <input type="hidden" name="isActive" value="@(Model.IsActive ? "false" : "true")" />
        <button class="btn @(Model.IsActive ? "btn-outline-warning" : "btn-outline-success")" type="submit">
            @(Model.IsActive ? "Pasifleştir" : "Aktifleştir")
        </button>
    </form>

    <form asp-action="AssignTeacher" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="courseId" value="@Model.Id" />
        <div class="input-group" style="max-width:360px">
            <input type="number" name="teacherId" class="form-control" placeholder="Öğretmen Id" />
            <button class="btn btn-outline-primary" type="submit">Öğretmen Ata</button>
        </div>
        <div class="form-text">İstersen burayı sonradan dropdown’a bağlarız.</div>
    </form>

    <a class="btn btn-outline-info" asp-action="Students" asp-route-courseId="@Model.Id">Öğrencileri Gör</a>
</div>

<h5 class="mb-2">Kursa Kayıtlı Öğrenciler</h5>
@if (Model.Students is { Count: > 0 })
{
    <table class="table table-sm table-striped">
        <thead><tr><th>#</th><th>Numara</th><th>Ad Soyad</th></tr></thead>
        <tbody>
            @foreach (var s in Model.Students)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.StudentNumber</td>
                    <td>@s.FullName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-muted">Bu derse kayıtlı öğrenci yok.</div>
}
