@{
    Layout = null;
    var appTitle = ViewData["Title"] as string ?? "UstaTakip";
}
<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@appTitle - StudentAutomation</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <!-- Font Awesome (opsiyonel ikonlar için) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          rel="stylesheet"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkfAm5X6Z5x5G1z4wP6x9h7LwT2qSx6G1NvG1P8VbF1nY+QvMZP5xFybw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Auth tema stilleri -->
    <link rel="stylesheet" href="~/css/auth-theme.css" />
</head>
<body class="auth-body d-flex align-items-center">
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-11 col-sm-10 col-md-8 col-lg-5">
                <div class="auth-card card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <!-- LOGO alanı (istersen img koy) -->
                            <div class="d-inline-flex align-items-center gap-2">
                                <i class="fa-solid fa-screwdriver-wrench fa-2x text-primary"></i>
                                <h1 class="h4 m-0 fw-bold">UstaTakip</h1>
                            </div>
                            <p class="text-muted mt-2">@appTitle</p>
                        </div>

                        @RenderBody()

                        <div class="mt-4 small text-center text-secondary">
                            © @DateTime.Now.Year UstaTakip — Tüm hakları saklıdır.
                        </div>
                    </div>
                </div>

                <!-- Tema anahtarı -->
                <div class="text-center mt-3">
                    <button id="themeToggle" type="button" class="btn btn-outline-secondary btn-sm">
                        <i class="fa-regular fa-moon me-1"></i>
                        Tema: <span id="themeLabel">Açık</span>
                    </button>
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN6jIeHz50"
            crossorigin="anonymous"></script>

    <script src="~/js/auth-theme.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
