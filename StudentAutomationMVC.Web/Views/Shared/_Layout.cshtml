@using Microsoft.AspNetCore.Mvc.Rendering
@{
    string IsActive(string controller, string action = "Index")
        => (string.Equals(ViewContext.RouteData.Values["controller"]?.ToString(), controller, StringComparison.OrdinalIgnoreCase)
         && string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), action, StringComparison.OrdinalIgnoreCase))
            ? "active" : "";

    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? "Kullanıcı";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0d6efd" />
    <title>@ViewData["Title"] - StudentAutomation</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* NOT: Aşağıdaki satır 404 veriyordu; gerçek derlenen styles dosyan yoksa kaldırılmıştır.
       Eğer proje adınla üretiliyorsa tekrar ekle: <link rel="stylesheet" href="~/StudentAutomationMVC.Web.styles.css" asp-append-version="true" /> *@
</head>
<body data-bs-theme="light">
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard"></i> StudentAutomation
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Home", "Index")" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Ana Sayfa
                            </a>
                        </li>

                        <!-- MENÜ: Students, Enrollments, Teachers, Courses, Attendances, Grades -->
                        <li class="nav-item">
                            <a class="nav-link @IsActive("Students")" asp-controller="Students" asp-action="Index">
                                <i class="bi bi-person-vcard"></i> Students
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Enrollments")" asp-controller="Enrollments" asp-action="Index">
                                <i class="bi bi-list-check"></i> Enrollments
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Teachers")" asp-controller="Teachers" asp-action="Index">
                                <i class="bi bi-people"></i> Teachers
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Courses")" asp-controller="Courses" asp-action="Index">
                                <i class="bi bi-journal-bookmark"></i> Courses
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Attendances")" asp-controller="Attendances" asp-action="Index">
                                <i class="bi bi-person-check"></i> Attendances
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @IsActive("Grades")" asp-controller="Grades" asp-action="Index">
                                <i class="bi bi-clipboard-check"></i> Grades
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <!-- Dark/Light toggle -->
                        <button id="themeToggle" class="btn btn-outline-secondary btn-sm" type="button" title="Tema">
                            <i class="bi bi-moon-stars"></i>
                        </button>

                        @if (!isAuth)
                        {
                            <a class="btn btn-outline-primary btn-sm" asp-controller="Auth" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş
                            </a>
                            <a class="btn btn-primary btn-sm" asp-controller="Auth" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Kayıt
                            </a>
                        }
                        else
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @userName
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                                            <i class="bi bi-speedometer2"></i> Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="px-3">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item text-danger p-0">
                                                <i class="bi bi-box-arrow-right"></i> Çıkış
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-3">
        <main role="main" class="pb-3">

            <!-- TempData Alerts -->
            @if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-1"></i> @s
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }
            @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @e
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 text-muted">
        <div class="container d-flex justify-content-between small">
            <span>&copy; @DateTime.Now.Year - StudentAutomation</span>
            <a asp-controller="Home" asp-action="Privacy" class="link-secondary">Gizlilik</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Tema kalıcılaştırma (light/dark)
        (function () {
            const key = "studentautomation_theme";
            const btn = document.getElementById("themeToggle");
            const root = document.body;

            function apply(theme) {
                root.setAttribute("data-bs-theme", theme);
                localStorage.setItem(key, theme);
                btn.innerHTML = theme === "dark"
                    ? '<i class="bi bi-brightness-high"></i>'
                    : '<i class="bi bi-moon-stars"></i>';
            }

            const saved = localStorage.getItem(key);
            apply(saved === "dark" ? "dark" : "light");

            btn?.addEventListener("click", () => {
                const cur = root.getAttribute("data-bs-theme") === "dark" ? "light" : "dark";
                apply(cur);
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
