@model StudentAutomationMVC.Web.Models.Teachers.TeacherCreateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="UserId" class="form-label">Kullanıcı (UserId)</label>
            <input asp-for="UserId" class="form-control" type="number" min="1" />
            <div class="form-text">Var olan bir kullanıcı ID’si girin.</div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Title" class="form-label">Unvan</label>
            <select asp-for="Title" class="form-select">
                <option>Lecturer</option>
                <option>Asst. Prof.</option>
                <option>Assoc. Prof.</option>
                <option>Prof.</option>
            </select>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Department" class="form-label">Bölüm</label>
            <input asp-for="Department" class="form-control" placeholder="Örn: Industrial Engineering" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <div class="form-check mt-4">
                <input asp-for="Status" class="form-check-input" type="checkbox" />
                <label asp-for="Status" class="form-check-label">Aktif</label>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Kaydet
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
    </div>
</form>
