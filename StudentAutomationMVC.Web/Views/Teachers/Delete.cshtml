@model StudentAutomationMVC.Web.Models.Teachers.TeacherDetailDto
@{
    ViewData["Title"] = "Öğretmen Sil";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="m-0 text-danger">Öğretmen Sil</h3>
    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
</div>

@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <p class="mb-3">Bu öğretmeni silmek istediğinize emin misiniz?</p>

        <dl class="row">
            <dt class="col-sm-3">Ad Soyad</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9"><a href="mailto:@Model.Email">@Model.Email</a></dd>

            <dt class="col-sm-3">Unvan</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Bölüm</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.Status)
                {
                    <span class="badge bg-success">Aktif</span>
                }
                else
                {

                    <span class="badge bg-secondary">Pasif</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Evet, Sil
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
            </div>
        </form>
    </div>
</div>
